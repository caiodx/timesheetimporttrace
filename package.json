{
  "name": "timesheetimporttrace",
  "version": "1.0.0",
  "description": "TimesheetImportTrace - Electron + React + TypeScript + Redux + Material UI",
  "main": "dist/main/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "npx tsc -p tsconfig.main.json && wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "vite build && tsc -p tsconfig.main.json",
    "build:win": "npm run rebuild && npm run build && electron-builder --win --x64",
    "build:win:portable": "npm run rebuild && npm run build && electron-builder --win portable",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "redux",
    "mui"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/helper-validator-identifier": "^7.28.5",
    "@babel/template": "^7.28.6",
    "@babel/types": "^7.29.0",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitejs/plugin-react-swc": "^4.2.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.3.0",
    "electron-builder": "^26.7.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^10.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "@mui/x-data-grid": "^8.27.0",
    "@reduxjs/toolkit": "^2.11.2",
    "dayjs": "^1.11.19",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-redux": "^9.2.0"
  },
  "build": {
    "appId": "com.timesheetimporttrace.app",
    "productName": "TimesheetImportTrace",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/",
      "package.json"
    ],
    "icon": "Logo.ico",
    "win": {
      "icon": "Logo.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
